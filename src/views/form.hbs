{{!-- <h1>Form</h1> --}}
<div class="container"> 
  <form action="/api/products/save" method="post">
    <div class='form-group'>
      <label for='product'>Product: </label>
      <input
        type='text'
        class='form-control'
        name='product'
      />
    </div>
    <div class='form-group'>
      <label for='price'>Price</label>
      <input
        type='text'
        name='price'
        class='form-control'
      />
    </div>
    <div class='form-group'>
      <label for='thumbnail'>Thumbnail</label>
      <input
        type='text'
        name='thumbnail'
        class='form-control'
      />
    </div>
    <button type='submit' class='btn btn-primary'>Submit</button>
  </form>
  <div class="productTable">
    
  </div>

  <div class='chat'>
    <h2>Chat</h2>
      <ul id="messages"></ul>
      <form id="form" action="">
        <input type='email' id='email' class="input" placeholder="Enter an email" required autocomplete="off" />
        <input class="input" id="input" placeholder="Enter a message" required autocomplete="off" />
        <button>Send</button>
      </form>
  </div>

</div>

<script src="/socket.io/socket.io.js"></script>
<script src="main.js"></script>